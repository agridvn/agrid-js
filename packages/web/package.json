{
  "name": "agrid-js-lite",
  "version": "4.1.15",
  "description": "Lightweight Agrid JavaScript SDK for size-conscious applications",
  "license": "MIT",
  "author": {
    "name": "Agrid",
    "email": "info@agrid.vn",
    "url": "https://agrid.com"
  },
  "homepage": "https://github.com/agridvn/agrid-js#readme",
  "keywords": [
    "agrid",
    "analytics",
    "lite",
    "lightweight",
    "feature-flags"
  ],
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/agridvn/agrid-js.git",
    "directory": "packages/web"
  },
  "main": "dist/index.cjs",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "scripts": {
    "clean": "rimraf dist coverage",
    "test:unit": "jest -c jest.config.js",
    "lint": "eslint src test",
    "lint:fix": "eslint src test --fix",
    "prebuild": "node -p \"'export const version = ' + JSON.stringify(require('./package.json').version)\" > src/version.ts",
    "build": "rollup -c",
    "dev": "rollup -c -w",
    "prepublishOnly": "pnpm lint && pnpm test:unit && pnpm build",
    "package": "pnpm pack --out $PACKAGE_DEST/%s.tgz"
  },
  "files": [
    "dist",
    "src"
  ],
  "dependencies": {
    "@agrid/core": "workspace:*"
  },
  "devDependencies": {
    "@agrid-tooling/tsconfig-base": "workspace:*",
    "@agrid-tooling/rollup-utils": "workspace:*",
    "jest": "catalog:",
    "jest-environment-jsdom": "catalog:"
  }
}
